<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:gravity="center_vertical"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/walmart_logo"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"
            android:textSize="25sp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corner_box"
            android:layout_marginTop="16dp"
            android:padding="16dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter your email address and we will send you a way to recover your password."
                android:textSize="15sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email address (required)"
                android:textSize="15sp"
                android:layout_marginTop="10dp"/>
            <EditText
                android:id="@+id/txtEmail"
                android:hint="email"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/round_corner_box"
                android:layout_marginTop="5dp"
                android:inputType="textEmailAddress"
                android:paddingLeft="5dp"
                />

            <Button
                android:id="@+id/submit_button"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Submit"
                android:background="@drawable/login_button"
                android:layout_marginTop="10dp"/>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>